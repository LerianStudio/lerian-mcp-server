# Midaz MCP Server Configuration
# Copy this file to .env to use environment variables for configuration

# Backend Connection
MIDAZ_ONBOARDING_URL=http://localhost:3000
MIDAZ_TRANSACTION_URL=http://localhost:3001
MIDAZ_API_KEY=your-api-key-here

# Server Behavior
MIDAZ_USE_STUBS=false
MIDAZ_LOG_LEVEL=info

# Logging Configuration
# Log levels: debug, info, notice, warning, error, critical, alert, emergency
MIDAZ_LOG_LEVEL=info
MIDAZ_CONSOLE_LOGS=true
MIDAZ_DETAILED_LOGS=false

# Timeouts and Retries
MIDAZ_BACKEND_TIMEOUT=10000
MIDAZ_BACKEND_RETRIES=3 