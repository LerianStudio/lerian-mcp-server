{
  "branches": [
    "main",
    {
      "name": "develop",
      "prerelease": true
    }
  ],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          { "type": "feat", "release": "minor" },
          { "type": "fix", "release": "minor" },
          { "type": "perf", "release": "minor" },
          { "type": "docs", "release": "minor" },
          { "type": "chore", "release": "minor" },
          { "type": "refactor", "release": "minor" },
          { "type": "test", "release": "minor" },
          { "type": "build", "release": "minor" },
          { "type": "ci", "release": "minor" },
          { "breaking": true, "release": "major" },
          { "revert": true, "release": "minor" },
          { "type": "*", "release": "minor" }
        ],
        "parserOpts": {
          "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES"]
        }
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "angular"
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    "@semantic-release/npm",
    [
      "@semantic-release/git",
      {
        "assets": ["package.json", "package-lock.json", "CHANGELOG.md"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/github",
      {
        "successComment": "üéâ This ${issue.pull_request ? 'PR is included' : 'issue has been resolved'} in version ${nextRelease.version}",
        "failTitle": "‚ùå The automated release is failing",
        "labels": ["released"]
      }
    ]
  ]
}